{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "paths": {      
      "src/*": [
        "src/*"
      ],
      "common/*": [
        "src/common/*"
      ],
      "components/*": [
        "src/components/*"
      ],
    },
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": [
    "./src",
    "./webpack.config.ts",
    "./declarations.d.ts",
    "config.ts",
    "fonts.d.ts"
  ]
}
